<div class="records index">

  <h1>Your Collection</h1>

  <table class="listing" summary="Record list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Artist</th>
      <th>Releases</th>
      <th>Label</th>
      <th>Controls</th>
    </tr>
    <% @records.each do |record| %>
    <tr>
      <td><%= record.artist %></td>
      <td><%= record.releases %></td>
      <td><%= record.lables %></td>
      <td><%= record.searching %></td>
      <td class="actions">
         <!--  go to show action in the records controller -->
        <%= link_to("Show", {:action => 'show', :id => record.id}, :class => 'action show') %>
        <!--  go to edit action in the records controller -->
        <%= link_to("Edit", {:action => 'edit', :id => record.id}, :class => 'action edit') %>
        <!--  go to  delete action in the records controller -->
        <%= link_to("Delete", {:action => 'delete', :id => record.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

  <%= link_to("Add a New Record", {:action => 'new'}, :class => 'action new') %>
<%= @artist_name %>
<img src= <%= @artist_image %> />

</div>




